{
    "commit-msg": {
        "enabled": true,
        "actions": []
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "composer validate --strict"
            },
            {
                "action": "composer normalize --diff --dry-run"
            },
            {
                "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting"
            },
            {
                "action": "cd examples && for file in *.php; do echo \"Testing examples/$file...\"; php \"$file\" > /dev/null 2>&1 || { echo \"✗ Failed: examples/$file\"; exit 1; }; echo \"✓ Passed: examples/$file\"; done",
                "options": {
                    "label": "Validate example files"
                }
            },
            {
                "action": "\\Ruudk\\ReadmeExamplesSyncHook\\SyncReadmeExamples"
            },
            {
                "action": "vendor/bin/php-cs-fixer check --diff"
            },
            {
                "action": "vendor/bin/phpstan"
            },
            {
                "action": "vendor/bin/phpunit"
            }
        ]
    }
}
